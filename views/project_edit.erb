
<h1><%= @project.title %></h1>

<form action="/projects/<%= @project.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <br>
  <p>Edit Project</p>
  <div class="form-group">
    <label for="volunteer">Volunteers</label>
    <select name="volunteer">
      <% @volunteers.each() do |volunteer| %>
      <option value="<%= volunteer.id %>"><%=volunteer.name %></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-info">Add</button>
</form>

<br>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename your project title:</label>
  <input id="title" name="title" type="text">
  <br>
  <button type="submit">Update Project</button>
</form>
<br>
<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Project</button>
</form>
<br>
<form class="form-inline" method="get" action="/">
  <button type="submit" class="btn btn-warning" name="clear_btn">Home Page</button>
</form>
