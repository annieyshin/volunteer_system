
<h1><%= @project.title %></h1>
  <h2>Edit Project</h2>

  <h3>Volunteers</h3>
    <ul>
      <% @volunteers.each() do |volunteer|%>
        <% if volunteer.project_id == @project.id %>
          <li>
            <a href="/volunteers/<%= volunteer.id %>"><%= volunteer.name %></a>
          </li>
        <% else %>
        <% end %>
      <% end %>
    </ul>
  <br>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename your project title:</label>
  <input id="title" name="title" type="text">
  <br>
  <button type="submit">Update Project</button>
</form>
<br>
<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Project</button>
</form>
<br>
<form class="form-inline" method="get" action="/">
  <button type="submit" class="btn btn-warning" name="clear_btn">Home Page</button>
</form>
