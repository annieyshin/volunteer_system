<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Projects</h2>
      <h3>Add a new project</h3>
        <form action="/" method="post">
          <label for="title">Project Title</label>
          <input type="text" name="title">
          <button class="btn btn-info" type="submit" name="add_button">Create Project</button>
        </form>
        <br>
        <ul>
          <% @projects.each() do |project|%>
            <li><a href="/projects/<%= project.id %>"><%= project.title %></a></li>
          <% end %>
        </ul>
    </div>
    <div class="col-md-6">
      <h2>Volunteers</h2>
      <a href="/volunteers">View all volunteers</a>
      <br>
      <a href="/volunteers/add">Add a volunteer</a>
      <br>
    </div>
  </div>



</div>
